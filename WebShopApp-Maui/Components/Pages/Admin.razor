@page "/admin"
@inject NavigationManager navManager;

<style>
    .container {
        max-width: 1200px;
        font-family: Arial, sans-serif;
        margin-top: 50px;
    }

    .clearfix::after {
        content: "";
        display: table;
        clear: both;
    }

    .column {
        width: 100%;
        float: none;
        padding: 0;
    }

    /* Menu styles */
    .menu {
        background-color: white;
        border-radius: 15px;
        padding: 10px;
        width: 100%;
    }

    /* Vertical Menu */
    .vertical-menu {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        width: 100%;
        padding: 10px;
        border-radius: 8px;
    }

    /* Menu Items */
    .vertical-menu a {
        background-color: #ffc1b3; /* Coral color */
        color: white;
        text-align: center;
        padding: 12px 20px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 16px;
        margin-bottom: 10px;
        transition: background-color 0.3s ease;
        display: block;
    }

     /* Last menu item should not have a bottom margin */
     .vertical-menu a:last-child {
         margin-bottom: 0;
     }

     /* Hover and Active States */
     .vertical-menu a:hover {
         background-color: #ff8b75;
     }

     .vertical-menu a.active {
         background-color: #ff6150;
     }

    /* Content Styling */
    .content {
        width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
</style>

<Header/>

<div class="container">
    <div class="clearfix">
        <div class="column menu">
            <div class="vertical-menu">
                <a class="@(productFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Products"))'>Administrer Produkter</a>
                <a class="@(categoryFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Categories"))'>Administrer Kategorier</a>
                <a class="@(usersFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Users"))'>Administrer Brugere</a>
            </div>
        </div>

        <div class="column content">

            @if (productFlag)
            {
                <div>
                    <Product />
                </div>
            }

            @if (categoryFlag)
            {
                <div>
                    <Category />
                </div>
            }

            @if (usersFlag)
            {
                <div>
                    <User />
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string headerText = "Products";
    private bool productFlag = true;
    private bool categoryFlag = false;
    private bool usersFlag = false;

    private void ChangeActiveMenu(string menu)
    {
        headerText = menu;

        switch (menu)
        {
            case "Products":
                productFlag = true;
                categoryFlag = false;
                usersFlag = false;
                break;

            case "Categories":
                productFlag = false;
                categoryFlag = true;
                usersFlag = false;
                break;

            case "Users":
                productFlag = false;
                categoryFlag = false;
                usersFlag = true;
                break;
        }
    }
}
