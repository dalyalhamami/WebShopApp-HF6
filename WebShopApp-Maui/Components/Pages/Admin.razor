@page "/admin"
@inject NavigationManager navManager;

<style>
    .container {
        max-width: 1200px;
        background-color: transparent;
        margin-top: 40px;
    }

    .clearfix::after {
    content: "";
    display: table;
    clear: both;
}

.column {
    width: 100%;
    float: none;
    padding: 0;
}

.menu {
    background-color: white;
    border-radius: 15px;
    padding: 10px;
}

.vertical-menu {
    border-radius: 10px;
}

    .vertical-menu a {
        display: block;
        padding: 12px;
        text-decoration: none;
        color: black;
        background-color: #f1f1f1;
        border-radius: 5px;
        margin-bottom: 5px;
        transition: background-color 0.3s ease;
    }

        .vertical-menu a:hover {
            background-color: #ddd;
        }

        .vertical-menu a.active {
            background-color: olivedrab;
            color: white;
        }

.content {
    padding: 10px;
    background-color: #f9f9f9;
    border-radius: 10px;
    margin-top: 20px;
}


    .column {
        width: 25%;
        float: left;
        padding: 10px;
    }

    .content {
        width: 70%;
        float: right;
    }



    .column {
        width: 100%;
        float: none;
    }

    .content {
        width: 100%;
        float: none;
        margin-top: 10px;
    }

/* Button styles */
.btn {
    padding: 10px 15px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    margin-top: 10px;
}

    .btn:hover {
        background-color: #45a049;
    }

h3 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 15px;
}

h4 {
    font-size: 1.3rem;
    color: #444;
    margin-bottom: 10px;
}
</style>

<Header></Header>

<div class="container">
    <div class="clearfix">
        <div class="column menu">
            <div class="vertical-menu">
                <a class="@(productFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Products"))'>Manage Products</a>
                <a class="@(categoryFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Categories"))'>Manage Categories</a>
                <a class="@(usersFlag ? "active" : "")" @onclick='(() => ChangeActiveMenu("Users"))'>Manage Users</a>
            </div>
        </div>

        <div class="column content">

            @if (productFlag)
            {
                <div>
                    <Product />
                </div>
            }

            @if (categoryFlag)
            {
                <div>
                    <Category />
                </div>
            }

            @if (usersFlag)
            {
                <div>
                    <User />
                </div>
            }
        </div>
    </div>
</div>


@code {
    private string headerText = "Products";
    private bool productFlag = true;
    private bool categoryFlag = false;
    private bool usersFlag = false;

    private void ChangeActiveMenu(string menu)
    {
        headerText = menu;

        switch (menu)
        {
            case "Products":
                productFlag = true;
                categoryFlag = false;
                usersFlag = false;
                break;

            case "Categories":
                productFlag = false;
                categoryFlag = true;
                usersFlag = false;
                break;

            case "Users":
                productFlag = false;
                categoryFlag = false;
                usersFlag = true;
                break;
        }
    }
}
